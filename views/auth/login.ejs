<%- include('../include/header') %>

<div class="container">
    <%- include('../include/partials/responseMessage') %>

    <form action="/api/login" method="POST" class="flex-center-columm auth-form">
        
        <h1 class="flex-center-row">Login <img src="/assets/icons/user-check.svg" alt="User"> </h1>

        <div class="input-group">
            <label>EMAIL</label>
            <input type="text" name="email" placeholder="Emter your Email...">
        </div>

        <div class="input-group">
            <label>Password</label>
            <input type="password" name="password" placeholder="Emter your Password...">
        </div>

        <a href="/register" class="redirect-link">Don't have an account?</a>

        <button type="submit" name="submit">Submit</button>
    </form>
</div>

